  flowchart TD
  Start([Start]) --> Landing["Open Medicare Platform"]
  Landing --> Role{Select Role}
  Role --> Guest[Guest]
  Role --> Patient[Patient]
  Role --> Doctor[Doctor]
  Role --> Nurse[Nurse]
  Role --> Admin[Admin]

  %% Guest
  Guest --> SignUp[Sign Up or Create Account]
  SignUp --> Verify[Email or Phone Verification]
  Verify --> GuestLogin[Login]
  GuestLogin --> AuthGuest{Authenticated?}
  AuthGuest -- No --> GuestSupport[Retry or Reset Password]
  GuestSupport --> GuestLogin
  AuthGuest -- Yes --> PatientDashboard

  %% Patient
  Patient --> PatientLogin[Login]
  PatientLogin --> AuthPatient{Authenticated?}
  AuthPatient -- No --> PatientRecovery[Retry or Forgot Password]
  PatientRecovery --> PatientLogin
  AuthPatient -- Yes --> PatientDashboard[Patient Dashboard]
  PatientDashboard --> SearchDoctors[Search and Filter Doctors]
  SearchDoctors --> ViewDoctor[View Doctor Profile]
  ViewDoctor --> ChooseService["Select Service: Clinic or Teleconsult"]
  ChooseService --> SelectSlot[Pick Date and Time]
  SelectSlot --> CheckAvailability{Slot Available?}
  CheckAvailability -- No --> SuggestAlt[Suggest Alternate Slots]
  SuggestAlt --> SelectSlot
  CheckAvailability -- Yes --> PreConfirm[Confirm Details]
  PreConfirm --> PaymentNeeded{Payment Required?}
  PaymentNeeded -- Yes --> PayNow[Process Payment]
  PayNow -- Failed --> PaymentRetry[Retry or Cancel]
  PaymentRetry --> PayNow
  PayNow -- Success --> BookingConfirmed[Booking Confirmed]
  PaymentNeeded -- No --> BookingConfirmed
  BookingConfirmed --> Reminders["Send Reminders and Notifications"]
  Reminders --> CheckIn["Patient Check-In or Join Call"]
  CheckIn --> Consultation[Consultation]
  Consultation --> PostVisit[Prescriptions and Records]
  PostVisit --> Feedback[Leave Feedback or Rating]
  Feedback --> PatientLogout[Logout]
  PatientLogout --> Stop([Stop])

  %% Doctor
  Doctor --> DoctorLogin[Login]
  DoctorLogin --> AuthDoctor{Authenticated?}
  AuthDoctor -- No --> DoctorRecovery[Retry or Contact Support]
  DoctorRecovery --> DoctorLogin
  AuthDoctor -- Yes --> DoctorDashboard[Doctor Dashboard]
  DoctorDashboard --> ReviewSchedule[Review Schedule]
  ReviewSchedule --> AcceptDecline{Accept or Decline Appointment}
  AcceptDecline -- Decline --> NotifyPatient[Notify Patient]
  AcceptDecline -- Accept --> PrepareConsult[Prepare Consultation]
  PrepareConsult --> ConductConsult[Conduct Consultation]
  ConductConsult --> UpdateNotes[Add Notes and Prescription]
  UpdateNotes --> UpdateAvailability[Update Availability Slots]
  UpdateAvailability --> DoctorLogout[Logout]
  DoctorLogout --> Stop

  %% Nurse
  Nurse --> NurseLogin[Login]
  NurseLogin --> AuthNurse{Authenticated?}
  AuthNurse -- No --> NurseRecovery[Retry or Contact Support]
  NurseRecovery --> NurseLogin
  AuthNurse -- Yes --> NurseDashboard[Nurse Dashboard]
  NurseDashboard --> ViewAssignments[View Assignments]
  ViewAssignments --> UpdateVitals[Update Vitals and Notes]
  UpdateVitals --> AssistAppointment[Assist Consultation Coordination]
  AssistAppointment --> NurseLogout[Logout]
  NurseLogout --> Stop

  %% Admin
  Admin --> AdminLogin[Login]
  AdminLogin --> AuthAdmin{Authenticated?}
  AuthAdmin -- No --> AdminRecovery[Retry or Contact Support]
  AdminRecovery --> AdminLogin
  AuthAdmin -- Yes --> AdminDashboard[Admin Dashboard]
  AdminDashboard --> ManageUsers[Manage All Users]
  ManageUsers --> ApproveDoctors[Approve Doctors]
  AdminDashboard --> ManageDepartments[Manage Departments and Services]
  AdminDashboard --> ManageAppointments[Manage Appointments or Override]
  AdminDashboard --> ViewReports[View Reports and Analytics]
  AdminDashboard --> SystemSettings[Configure System Settings]
  SystemSettings --> AdminLogout[Logout]
  AdminLogout --> Stop